@model IEnumerable<_16_March.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryRowId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BasePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryRowId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BasePrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryRowId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryRowId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryRowId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
